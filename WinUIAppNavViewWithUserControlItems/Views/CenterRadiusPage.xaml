<Page
    x:Class="WinUIAppNavViewWithUserControlItems.Views.CenterRadiusPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:WinUIAppNavViewWithUserControlItems.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:CornerOppositeViewModel}"
    mc:Ignorable="d">

    <StackPanel Spacing="20" Padding="20">
        <StackPanel.Resources>
            <Style TargetType="TextBlock">
                <Setter Property="FontSize" Value="10" />
            </Style>
        </StackPanel.Resources>

        <StackPanel Spacing="10" BorderBrush="{ThemeResource SurfaceStrokeColorDefault}" BorderThickness="1" Padding="15" CornerRadius="8">
            <TextBlock Text="Center (dms)"/>

            <NumberBox Value="{x:Bind ViewModel.Degrees, Mode=TwoWay}" 
                       Minimum="-180" Maximum="180" SpinButtonPlacementMode="Inline" />

            <NumberBox Value="{x:Bind ViewModel.Minutes, Mode=TwoWay}" 
                       Minimum="-90" Maximum="90" SpinButtonPlacementMode="Inline" />

            <NumberBox Value="{x:Bind ViewModel.Seconds, Mode=TwoWay}" 
                       Minimum="-90" Maximum="90" SpinButtonPlacementMode="Inline" />
        </StackPanel>

        <StackPanel Spacing="10" BorderBrush="{ThemeResource SurfaceStrokeColorDefault}" BorderThickness="1" Padding="15" CornerRadius="8">
            <TextBlock Text="Radius (miles)"/>

            <NumberBox Value="{x:Bind ViewModel.Radius, Mode=TwoWay}" 
                       Minimum="1" SpinButtonPlacementMode="Inline" />
        </StackPanel>

    </StackPanel>
</Page>