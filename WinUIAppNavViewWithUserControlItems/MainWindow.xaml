<Window
    x:Class="WinUIAppNavViewWithUserControlItems.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:WinUIAppNavViewWithUserControlItems"
    xmlns:vm="using:WinUIAppNavViewWithUserControlItems.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:MainWindowViewModel}"
    mc:Ignorable="d">

    <Grid x:Name="RootGrid">
        <NavigationView x:Name="NavView"
                Height="Auto"
                PaneDisplayMode="Left" 
                OpenPaneLength="600"
                IsPaneOpen="True"
                SelectionChanged="NavView_SelectionChanged"
                Loaded="NavView_Loaded">
            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Map" Content="Main Page" Tag="MainPage" />
                <NavigationViewItem Icon="Map" Content="Center &amp; Radius" Tag="CenterRadiusPage" />
                <NavigationViewItem Icon="Crop" Content="Corner &amp; Opposite" Tag="CornerOppositePage" />
                    <NavigationViewItem
                            x:Name="SearchByDrawingCircle"
                            AutomationProperties.AutomationId="SearchByDrawingCircle"
                            Content="Circle"
                            Tag="SearchByDrawingCircle"
                            PointerPressed="OnDrawingItemClicked" />
                            <StackPanel Orientation="Vertical" BorderBrush="{ThemeResource SurfaceStrokeColorDefault}" BorderThickness="2" Padding="15" CornerRadius="8">
                                <StackPanel Spacing="10" Orientation="Horizontal">
                                    <TextBlock Text="Center (dms)" VerticalAlignment="Center" />

                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Cdegrees, Mode=TwoWay}" 
                                       Minimum="-180" Maximum="180" SpinButtonPlacementMode="Compact" />

                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Cminutes, Mode=TwoWay}" 
                                       Minimum="-90" Maximum ="90" SpinButtonPlacementMode="Compact" />

                                    <NumberBox  Width="Auto" Value="{x:Bind MainWindowViewModel.Cseconds, Mode=TwoWay}" 
                                       Minimum="-90" Maximum="90" SpinButtonPlacementMode="Compact" />

                                    <TextBlock Width="Auto" VerticalAlignment="Center" Text="Radius (miles)" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Radius, Mode=TwoWay}" 
                                       Minimum="1" SpinButtonPlacementMode="Compact" />
                                </StackPanel>
                            </StackPanel>
                        <NavigationViewItem
                            x:Name="SearchByDrawingRectangle"
                            AutomationProperties.AutomationId="SearchByDrawingRectangle"
                            Content="Rectangle"
                            Tag="SearchByDrawRectangle"
                            PointerPressed="OnDrawingItemClicked" />
                            <StackPanel Orientation="Vertical" BorderBrush="{ThemeResource SurfaceStrokeColorDefault}" BorderThickness="2" Padding="15" CornerRadius="8">
                                <StackPanel Spacing="10" Orientation="Horizontal">
                                    <TextBlock Text="Corner (dms)" VerticalAlignment="Center"/>
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Degrees, Mode=TwoWay}" 
                                               Minimum="-180" Maximum="180" SpinButtonPlacementMode="Compact" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Minutes, Mode=TwoWay}" 
                                                Minimum="0" Maximum="60" SpinButtonPlacementMode="Compact" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.Seconds, Mode=TwoWay}" 
                                                Minimum="0" Maximum="60" SpinButtonPlacementMode="Compact" />
                                </StackPanel>

                                <StackPanel Spacing="10" Orientation="Horizontal">
                                    <TextBlock Text="Opposite (dms)" VerticalAlignment="Center" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.OppositeDegrees, Mode=TwoWay}" 
                                                Minimum="-180" Maximum="180" SpinButtonPlacementMode="Compact" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.OppositeMinutes, Mode=TwoWay}" 
                                                Minimum="0" Maximum="60" SpinButtonPlacementMode="Compact" />
                                    <NumberBox Width="Auto" Value="{x:Bind MainWindowViewModel.OppositeSeconds, Mode=TwoWay}" 
                                                Minimum="0" Maximum="60" SpinButtonPlacementMode="Compact" />
                                </StackPanel>
                            </StackPanel>
                    <NavigationViewItem
                            x:Name="DrawingOff"
                            AutomationProperties.AutomationId="DrawingOff"
                            Content="--Drawing Off--"
                            Tag="DrawingOff"
                            PointerPressed="OnDrawingItemClicked" />

